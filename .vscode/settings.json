{
  "editor.tabSize": 2,
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects/**",
    ".vscode",
    ".env"
  ],
  "cSpell.ignoreWords": [
    "vuex",
    "firestore",
  ],
  "search.exclude": {
    "package-lock.json": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.validate": [
    "vue",
    "html",
    "typescript"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "vetur.format.defaultFormatter.ts": "vscode-typescript",
}
